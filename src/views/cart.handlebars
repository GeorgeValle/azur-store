<div class="page-header">
    <h1 class="mx-3">Comprar</h1>
</div>

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                {{#if admin }}
                <li class="nav-item">
                    <a class="nav-link" href="/session/inputProduct">Editar Productos</a>
                </li>
                {{/if}}
                <li class="nav-item">
                    <a class="nav-link" href="/session/purchase">Comprar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/session/cart">Carrito</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/session/logout">Salir</a>
                </li>
            </ul>

        </div>
    </div>
</nav>

{{#if cart}}
    {{#if products }}
        <div class="cart page">
            <ul class="list-group">
                {{#each products }}
                <li class="list-group-item clearfix">
                    <div class="col-xs-5">
                        <strong>{{ this.name }}</strong><br/>
                        <em>{{{this.description}}}</em>
                    </div>
                    <div class="col-xs-2 text-right">
                        <span class="badge">{{ this.quantity }}</span>
                    </div>
                    <div class="col-xs-3 text-right">
                        ${{ this.price }}
                    </div>
                    <div class="col-xs-2 text-right">
                        <a href="/cart/{{this.userId}}/products/{{this._id}}" class="btn btn-dark btn-sm" role="button"></i> Eliminar</a>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    {{/if}}
    <div class="text-right">
        <strong>Total: ${{ totalPrice }} </strong>
    </div>
    <hr>
    <div class="text-right">
        <a href="#" type="button" class="btn btn-success">Checkout</a>
    </div>
{{ else }}
    <p>El carrito está vacio</p>
{{/if}}


