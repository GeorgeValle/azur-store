<div class="page-header">
    <h1 class="mx-3">Comprar</h1>
</div>

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand text-center fw-bolder text-white text-wrap" href="#">Azur Store</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                {{#if admin }}
                <li class="nav-item">
                    <a class="nav-link" href="/session/inputProduct">Editar Productos</a>
                </li>
                {{/if}}
                <li class="nav-item">
                    <a class="nav-link" href="/session/purchase">Comprar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/session/logout">Salir</a>
                </li>
            </ul>

        </div>
    </div>
</nav>


    {{!-- {{#if products }} --}}
        {{#each products }}
        <div class="cart page">
            <div class="card-group">
                
                <div class="card">
                    {{#each this }}
                    <div class="card-body">
                        <h5 class="card-title">{{ this.name }}</h5>
                        <p class="card-text text-muted">{{this.description}}</p>
                    </div>
                    <div class="card-text">
                        ${{this.price}}
                    </div>
                    <div class="card-footer">
                        <a href="/cart/{{this.userId}}/products/{{this._id}}" class="btn btn-dark btn-sm" role="button"></i> Eliminar</a>
                    </div>
                    {{/each }}
                </div>
                
            </div>
        </div>
        {{/each }}
        {{#if cart}}
        {{#each this }}
    {{!-- {{/if}} --}}
    <hr>
    <div class="text-left">
        <div class="text-title">Usuario: {{ user }} </div>
    </div>
    <hr>
    <div class="text-right">
        <div class="text-title">Total: ${{ this.totalPrice }} </div>
    </div>
    <div class="text-right">
        <div class="text-title">Total: ${{ this.totalItems }} </div>
    </div>
    <hr>
    <button class="btn btn-danger btn-sm" id="clean-cart">
        vaciar todo
    </button>
    <hr>
    <button class="btn btn-dark btn-lg" id="pay">
        Pagar
    </button>
    {{/each }}

{{ else }}
    <p>El carrito est√° vacio</p>
{{/if}}

